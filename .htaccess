# Disable directory browsing
Options -Indexes

# First line of defense (direct blocks)
RedirectMatch 403 ^/vendor(/|$)
RedirectMatch 403 ^/node_modules(/|$)
RedirectMatch 403 ^/\.git(/|$)
RedirectMatch 403 ^/\.github(/|$)
RedirectMatch 403 ^/\.husky(/|$)

# Block sensitive single files
<FilesMatch "^(config\.php|composer\.json|composer\.lock|rector\.php|\.php-cs-fixer\.php|package\.json|package-lock\.json)$">
    Require all denied
</FilesMatch>

# Enable rewriting
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Defense in depth (rewrite-level blocks FIRST)
    RewriteRule ^vendor(/|$) - [F,L]
    RewriteRule ^node_modules(/|$) - [F,L]
    RewriteRule ^\.git(/|$) - [F,L]
    RewriteRule ^\.github(/|$) - [F,L]
    RewriteRule ^\.husky(/|$) - [F,L]
    RewriteRule ^(config\.php|composer\.json|composer\.lock|rector\.php|\.php-cs-fixer\.php|package\.json|package-lock\.json)$ - [F,L]

    # Then routing rules
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [L]
</IfModule>
